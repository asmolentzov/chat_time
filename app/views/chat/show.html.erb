<h1>Now CHAT!</h1>
<h3>Hi <%= @user_1.name %>! You are now chatting with <%= @user_2.name %>.</h3>
<ul>  
  <% @messages.each do |message| %>
    <li><strong><%= message.sender.name %>: </strong><%= message.content %></li>
  <% end %>
</ul>
<%= form_for @message do |f| %>
  <%= f.label "New Message" %>
  <%= f.text_field :content %>
  <%= f.hidden_field(:sender, value: @user_1.id) %>
  <%= f.hidden_field(:receiver, value: @user_2.id) %>
  <%= f.submit "Send" %>
<% end %>
